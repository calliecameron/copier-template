name: CI

"on": [push]

permissions: {}

jobs:
  ci:
    name: CI
    runs-on: ubuntu-24.04
    steps:
      - name: Checkout
        uses: actions/checkout@v5
        with:
          persist-credentials: false
{% if uses_uv %}
      - name: Install uv
        uses: astral-sh/setup-uv@b75a909f75acd358c2196fb9a5f1299a9a8868a4 # v6.7.0
        with:
          version: "0.8.22"
{% endif %}
{% if uses_npm %}
      - name: Install node
        run: nvm install
{% endif %}
      - name: Test
        run: make ci
