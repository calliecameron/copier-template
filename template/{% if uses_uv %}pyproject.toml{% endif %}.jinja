[project]
name = "{{ project_name | slugify }}"
version = "{{ project_version }}"
requires-python = "=={{ existing_python_version or default_python_version }}"
dependencies = []

[dependency-groups]
dev = [
  {% if uses_copier %}
  "cookiecutter==2.6.0",
  "copier==9.10.2",
  "copier-template-extensions==0.3.3",
  {% endif %}
  {% if uses_gitlint %}
  "gitlint==0.19.1",
  {% endif %}
  {% if uses_pre_commit %}
  "pre-commit==4.3.0",
  {% endif %}
  {% if uses_tombi %}
  "tombi==0.6.5",
  {% endif %}
  {% if uses_typos %}
  "typos==1.36.2",
  {% endif %}
]

{% if uses_tombi %}
[tool.tombi]
{% endif %}

{% if uses_typos %}
[tool.typos]
default.extend-ignore-re = [
  "(?Rm)^.*(#|//)\\s*spellchecker: *disable-line$",
  "(?s)(#|//)\\s*spellchecker:* off.*?\\n\\s*(#|//)\\s*spellchecker:* on",
  "(#|//)\\s*spellchecker:* disable-next-line\\n.*",
]
{% endif %}
