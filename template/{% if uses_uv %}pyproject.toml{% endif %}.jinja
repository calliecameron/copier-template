[project]
name = "{{ project_name | slugify }}"
version = "{{ project_version }}"
requires-python = "=={{ python_version }}"
dependencies = []

[dependency-groups]
dev = [
  {% if uses_copier %}
  "cookiecutter==2.6.0",
  "copier==9.10.2",
  "copier-template-extensions==0.3.3",
  {% endif %}
  {% if uses_gitlint %}
  "gitlint==0.19.1",
  {% endif %}
  {% if uses_pre_commit %}
  "pre-commit==4.3.0",
  {% endif %}
  {% if uses_ruff %}
  "ruff==0.13.0",
  {% endif %}
  {% if uses_shellcheck %}
  "shellcheck-py==0.11.0.1",
  {% endif %}
  {% if uses_tombi %}
  "tombi==0.6.6",
  {% endif %}
  {% if uses_typos %}
  "typos==1.36.2",
  {% endif %}
]
{% if uses_ruff %}

[tool.ruff]
line-length = {{ python_line_length }}

[tool.ruff.lint]
select = ["ALL"]
ignore = [
  "C90",
  "D1",
  "E741",
  "EM",
  "FIX",
  "PLR09",
  "PTH",
  "PYI025",
  "S603",
  "S607",
  "T20",
  "TD",
  "TRY003",
  "TRY301",
]
{% endif %}
{% if uses_tombi %}

[tool.tombi]
{% endif %}
{% if uses_typos %}

[tool.typos]
files.extend-exclude = [
{% if uses_copier %}
  "/{{ _copier_conf.answers_file }}",
{% endif %}
]
default.extend-ignore-re = [
  "(?Rm)^.*(#|//)\\s*spellchecker: *disable-line$",
  "(?s)(#|//)\\s*spellchecker:* off.*?\\n\\s*(#|//)\\s*spellchecker:* on",
  "(#|//)\\s*spellchecker:* disable-next-line\\n.*",
]
{% endif %}
