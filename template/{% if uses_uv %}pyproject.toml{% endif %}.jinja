[project]
name = "{{ project_name | slugify }}"
version = "{{ project_version }}"
requires-python = "=={{ python_version }}"
dependencies = []

[dependency-groups]
dev = [
  {% if uses_copier %}
  "cookiecutter>=2.6.0",
  "copier>=9.10.2",
  "copier-template-extensions>=0.3.3",
  {% endif %}
  {% if uses_gitlint %}
  "gitlint>=0.19.1",
  {% endif %}
  {% if uses_pre_commit %}
  "pre-commit>=4.3.0",
  {% endif %}
  {% if uses_tombi %}
  "tombi>=0.6.5",
  {% endif %}
]

{% if uses_tombi %}
[tool.tombi]
{% endif %}
